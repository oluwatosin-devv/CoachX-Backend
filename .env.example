# Application
NODE_ENV=development
PORT=3000

# Database
DB_USERNAME=your_database_username_here
DB_PASSWORD=your_database_password_here
DB_STRING=mongodb+srv://<USERNAME>:<PASSWORD>@yourcluster.mongodb.net/coachx?retryWrites=true&w=majority

# JWT Authentication
JWT_TOKEN_SECRET=your_jwt_secret_here
EXPIRES_IN=90d

# Email (Development - Mailtrap or similar)
EMAIL_USERNAME=your_mailtrap_username
EMAIL_PASSWORD=your_mailtrap_password
EMAIL_HOST=sandbox.smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_FROM=hello@example.com

# Email (Production - Brevo / SendGrid / SMTP provider)
BREVO_HOST=smtp-relay.brevo.com
BREVO_PORT=2525
BREVO_LOGIN=your_brevo_login
BREVO_PASSWORD=your_brevo_password
